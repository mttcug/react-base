.header-container .search-panel {
  padding: 20px 15px;
  display: flex;
  background: #f57070;
}
.header-container .search-panel .avator img {
  width: 35px;
}
.header-container .search-panel .search-input {
  position: relative;
  margin-left: 15px;
  width: 100%;
}
.header-container .search-panel .search-input input {
  border: none;
  display: block;
  border-radius: 18px;
  height: 36px;
  padding-left: 20px;
  width: 100%;
}
.header-container .main-func .funs {
  list-style: none;
  display: flex;
  padding: 0px;
  background: #f57070;
  margin: 0px;
}
.header-container .main-func .funs li {
  display: block;
  flex: 1;
  text-align: center;
  padding: 15px 0;
}
.header-container .main-func .funs li .icon {
  display: block;
}
.header-container .main-func .funs li .icon svg {
  width: 25px;
  height: 25px;
}
.header-container .main-func .funs li .txt {
  display: block;
  margin-top: 10px;
}
.header-container .header-ads {
  position: absolute;
  top: 160px;
  width: 100%;
  padding: 0 20px;
}
.header-container .header-ads .float-block {
  display: flex;
  width: 100%;
  height: 46px;
  border-radius: 23px;
  background: #f71b2d;
  align-items: center;
  padding: 0 20px;
  justify-content: space-between;
}
.header-container .header-ads .float-block img {
  display: block;
  height: 66px;
}
.header-container .header-ads .float-block span {
  display: block;
  color: #fff;
  line-height: 46px;
}
.header-container .header-ads .float-block .btn {
  border: 1px solid #f7f78b;
  line-height: 20px;
  padding: 5px 12px;
  border-radius: 12px;
  background: #f7f78b;
  color: #000;
}
